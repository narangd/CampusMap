<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.campusmap.fragment.BuildingInfoFragment">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buildinginfo_buildinglist"
        android:layout_gravity="center"
        android:choiceMode="singleChoice"
        android:listSelector="@drawable/building_list_selector"
        android:background="?android:attr/activatedBackgroundIndicator"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buildinginfo_floorlist_side"
            android:layout_weight="5" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buildinginfo_floorlist"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:listSelector="@drawable/building_list_selector"
            android:background="?android:attr/activatedBackgroundIndicator"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buildinginfo_roomlist_side"
            android:layout_weight="4" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buildinginfo_roomlist"
            android:layout_weight="2"
            android:choiceMode="singleChoice"
            android:listSelector="@drawable/building_list_selector"
            android:background="?android:attr/activatedBackgroundIndicator"/>
    </LinearLayout>

</FrameLayout>
